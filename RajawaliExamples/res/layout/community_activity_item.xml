<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="7dp"
    android:background="@android:color/background_light" >

    <ImageView
        android:id="@+id/imageview_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/imageview_user_image"
        android:src="@drawable/animated_progress" />

    <TextView
        android:id="@+id/textview_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview_user_image"
        android:layout_toRightOf="@+id/imageview_user_image"
        android:lines="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    <TextView
        android:id="@+id/textview_user_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_user_name"
        android:layout_toRightOf="@+id/imageview_user_image"
        android:lines="1"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:textColor="#aaaaaa" />

    <TextView
        android:id="@+id/textview_user_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageview_user_image"
        android:ellipsize="end"
        android:lines="2"
        android:padding="7dp"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceMediumInverse" />

</RelativeLayout>